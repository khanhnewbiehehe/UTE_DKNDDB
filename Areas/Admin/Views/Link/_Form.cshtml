@model QLDaoTao.Models.AppLink
<div class="row">
    <div class="col-md-12">
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Title) <span class="text-danger">(*)</span></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group row">
            <label asp-for="Link" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Link) <span class="text-danger">(*)</span></label>
            <div class="col-sm-10">
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group row">
            <label asp-for="Order" class="col-sm-2 col-form-label">Order By</label>
            <div class="col-sm-10">
                <input type="number" asp-for="Order" class="form-control" />
            </div>
        </div>
    </div>
</div>