@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "List of roles";
    int i = 1;
}
<div class="card">
    <div class="card-header">
        <h4 class="card-title text-black ">Danh sách vai trò</h4>
        <div class="card-options f-right">
            <a class="nav-link btn btn-success create-new-button mr-2" href="/admin/role/create">
                <svg width="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12.0001 8.32739V15.6537" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    <path d="M15.6668 11.9904H8.3335" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M16.6857 2H7.31429C4.04762 2 2 4.31208 2 7.58516V16.4148C2 19.6879 4.0381 22 7.31429 22H16.6857C19.9619 22 22 19.6879 22 16.4148V7.58516C22 4.31208 19.9619 2 16.6857 2Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                </svg>
                Thêm mới
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="loadData" class="table table-hover table-striped table-vcenter text-nowrap">
                <thead>
                    <tr>
                        <th style="width:5%">
                            STT
                        </th>
                        <th style="width:15%">
                            ID
                        </th>
                        <th>
                            Tên vai trò
                        </th>

                        <th style="width:5%">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                ID: @item.Id
                            </td>
                            <td>
                                <b>@Html.DisplayFor(modelItem => item.Name)</b><br />
                                @*<i>ID: @item.Id</i>*@
                            </td>

                            <td class="d-flex">
                                <a class="btn btn-primary btn-pd mr-1" asp-controller="AppRoles" asp-action="EditUsersInRole"
                                   asp-route-roleId="@item.Id">
                                    <svg width="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M17.8877 10.8967C19.2827 10.7007 20.3567 9.50473 20.3597 8.05573C20.3597 6.62773 19.3187 5.44373 17.9537 5.21973" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                                        <path d="M19.7285 14.2505C21.0795 14.4525 22.0225 14.9255 22.0225 15.9005C22.0225 16.5715 21.5785 17.0075 20.8605 17.2815" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
